<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/review_Layout"
    android:padding="10dp">

    <TextView
        android:id="@+id/textViewReview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewReview5"
        android:layout_alignParentLeft="true"
        android:text="J Doe" />

    <TextView
        android:id="@+id/textViewReview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textViewReview1"
        android:text="Review Rating:"
        />

    <RatingBar
        android:id="@+id/ratingViewReview"
        style="@android:style/Widget.DeviceDefault.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/textViewReview2"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimaryDark"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0"
        android:stepSize="1"
        android:visibility="visible" />
    <TextView
        android:id="@+id/textViewReview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review:"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/ratingViewReview"
        />

    <TextView
        android:id="@+id/textViewReview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewReview3"
        android:layout_alignParentLeft="true"
        android:text="Review Text" />

    <TextView
        android:id="@+id/textViewReview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Reviewer:" />
</RelativeLayout>