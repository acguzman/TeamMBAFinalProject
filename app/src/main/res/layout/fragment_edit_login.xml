<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditLogin">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editTextPasswordOld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="323dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:hint="Old Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextPasswordUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="363dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:hint="New Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editTextPasswordConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="407dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:hint="Confirm New Password"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="256dp"
            android:text="Change Password:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextNameUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="117dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextUsernameUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:hint="Change Username"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textViewUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="46dp"
            android:text="Update Login Info"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonPasswordUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="117dp"
            android:layout_marginRight="117dp"
            android:layout_marginBottom="45dp"
            android:background="@color/colorPrimaryDark"
            android:text="Update Password" />

        <Button
            android:id="@+id/buttonLoginUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="202dp"
            android:background="@color/colorPrimaryDark"
            android:text="Update Username" />

    </RelativeLayout>


</FrameLayout>