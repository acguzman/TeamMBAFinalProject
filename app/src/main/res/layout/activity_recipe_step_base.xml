<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/parent_layout" android:padding="20dp">

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="210dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:text=">"
        android:visibility="visible" />

    <Button
        android:id="@+id/buttonNext2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="210dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:text=">"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonNext3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="210dp"
        android:background="@color/colorPrimaryDark"
        android:clickable="true"
        android:text=">"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonChat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="255dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:text="chat" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewStepName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progressBarStepBase"
                    android:layout_marginTop="10dp"
                    android:text="Step 1: Combine all of the ingredients, except fettucine, in a food processor. Process until smooth and creamy."
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageCookingIcon"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:adjustViewBounds="true"
                    android:visibility="visible"
                    android:src="@drawable/ic_cooking_item" />

                <ProgressBar
                    android:id="@+id/progressBarStepBase"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageCookingIcon"
                    android:layout_marginTop="10dp"
                    android:progressDrawable="@color/colorPrimaryDark"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textViewRecipeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_toRightOf="@+id/imageCookingIcon"
                    android:text="Avocado Fetuccine"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/textViewIngredientLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageStepPhoto"
                    android:layout_marginTop="10dp"
                    android:text="Ingredients Required:"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageStepPhoto"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_below="@+id/textViewStepName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/avocado_fettucine_complete" />

                <TextView
                    android:id="@+id/textViewStepIngredientList"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewIngredientLabel"
                    android:layout_marginTop="5dp"
                    android:text="2 avocados, pitted
            1 T nutritional yeast
            1 T extra virgin olive oil
            1 T fresh lemon juice
            1 clove garlic, minced
            1 tsp salt
            1/4 tsp freshly ground black pepper"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <!-- // TODO:AAYUSH android:src="@drawable/ic_chat_item" app:srcCompat="@drawable/ic_chat_item" -->

    <!-- // TODO:AAYUSH app:srcCompat="@drawable/ic_timer_item" /-->

    <!-- //TODO android:src="@drawable/ic_next_item"
    app:srcCompat="@drawable/ic_next_item" -->

</RelativeLayout>